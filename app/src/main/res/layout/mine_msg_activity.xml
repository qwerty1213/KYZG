<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/mine_msg_linear"
        android:layout_width="match_parent"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:background="#2CDE2E"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/mine_msg_image_return"
            android:layout_width="wrap_content"
            android:paddingLeft="10dp"
            android:layout_gravity="center_vertical"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_diary_back"/>

        <TextView
            android:id="@+id/mine_text_changed"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="消息中心"
            android:paddingLeft="20dp"
            android:textSize="18dp"/>
    </LinearLayout>
    <android.support.design.widget.TabLayout
        android:id="@+id/wodexiaoxi_Tablayout"
        android:layout_width="match_parent"
        android:layout_height="40dp" />

    <android.support.v4.view.ViewPager
        android:id="@+id/wodexiaoxi_ViewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />


</LinearLayout>