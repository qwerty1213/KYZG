<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#2ECB0F">

        <ImageView
            android:id="@+id/wdb_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:src="@drawable/ic_diary_back"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginTop="18dp"
            android:text="弹一弹"

            />

        <TextView
            android:id="@+id/add_send"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="15dp"
            android:text="发送"
            />
    </RelativeLayout>

    <EditText
        android:id="@+id/add_edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="今天想动弹什么？"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="4"
        android:layout_marginTop="450dp">
        <!--图片-->
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/add_tupian"
            android:src="@drawable/ic_tweet_picture_normal"
            android:layout_weight="1"/>
        <!--@-->
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/add_bieren"
            android:src="@drawable/ic_tweet_mention_normal"
            android:layout_weight="1"/>
        <!--#话题-->
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/add_huati"
            android:src="@drawable/ic_tweet_topic_normal"
            android:layout_weight="1"/>
        <!--表情-->
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/add_biaoqing"
            android:src="@drawable/ic_tweet_expression_normal"
            android:layout_weight="1"/>
    </LinearLayout>
</LinearLayout>